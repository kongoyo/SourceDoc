{
    "version": "0.2.0",
    "configurations": [
		{
			"type": "java",
			"name": "AS400JConecction",
			"request": "launch",
			"mainClass": "AS400JConecction",
			"projectName": ""
		},
		{
			"type": "java",
			"name": "ContactToolApplication",
			"request": "launch",
			"mainClass": "com.contact.contact_tool.ContactToolApplication",
			"projectName": "contact_tool"
		},
		{
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}"
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"sourceMaps": true,
			"preLaunchTask": "${defaultBuildTask}"
		},
		{
			"name": "Extension Tests (All)",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}"
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"sourceMaps": true,
			"preLaunchTask": "${defaultBuildTask}",
			"env": {
				"testing": "true"
			}
		},
		{
			"name": "Extension Tests (Individual)",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}"
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"sourceMaps": true,
			"preLaunchTask": "${defaultBuildTask}",
			"env": {
				"testing": "true",
				"individual": "true"
			}
		}
	]
}